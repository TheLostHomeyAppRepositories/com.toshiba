                      "nl": "Zet temperatuur naar [[targetTemperature]]" },
"args": [
  {
    "name": "targetTemperature",
    "type": "range",
    "min":17,
    "max":30,
    "step":1,
    "label":"°C",
    "title":{"en":"Temperature", "nl":"Temperatuur"}
  }
 ]
},
{
